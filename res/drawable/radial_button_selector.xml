<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下状态 -->
    <item android:state_pressed="true"><shape>
            <solid android:color="#B0E0E6" />

            <stroke android:width="1dp" android:color="#171717" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="30dp" android:right="30dp" android:top="10dp" />
        </shape></item>
    <!-- 普通状态 -->
    <item><shape>
           <gradient 
               android:endColor="#66ccff" 
               android:startColor="#66cccc"
                android:angle="270"  /> 

            <stroke android:width="1dp" android:color="#AEEEEE" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="30dp" android:right="30dp" android:top="5dp" />
        </shape></item>

</selector>