<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#6699ff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="#6699ff"
            android:padding="2dip"
            android:src="@drawable/search_icon" />

        <EditText
            android:id="@+id/search_et_input"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_edittext"
            android:hint="请输入关键字"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="#6699ff"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="16sp" >
        </Button>
    </LinearLayout>

    <ListView
        android:id="@id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/grid"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
    </ListView>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:layout_below="@+id/linearLayout1"
        android:columnCount="5"
        android:orientation="horizontal"
        android:rowCount="2"
        android:stretchMode="columnWidth" >

        <Button
            android:id="@+id/bt1"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#00000000"
            android:drawableTop="@drawable/b"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="特色菜"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/c"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="精品推荐"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/d"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="素   菜"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/e"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="汤   菜"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/f"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="活   动"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:background="#00000000"
            android:drawableTop="@drawable/g"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="饮   料"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/gwc"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="购物车"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/j"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="订   单"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:background="#00000000"
            android:drawableTop="@drawable/h"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="留言板"
            android:textColor="#000000"
            android:textSize="9sp" />

        <Button
            android:id="@+id/bt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="#00000000"
            android:drawableTop="@drawable/out"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="退   出"
            android:textColor="#000000"
            android:textSize="9sp" />
    </GridLayout>

</RelativeLayout>